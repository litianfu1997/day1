<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:weightSum="8"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加账务"

        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="金额："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/acc_money"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:hint="请输入金额"
            android:inputType="number|numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="时间："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/acc_date"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:hint="2019-1-1"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="类别："
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/zhangwu_leibie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/zhangwu_leibie"/>
        <Spinner
            android:id="@+id/leibie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="地点："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/acc_address"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:hint="请输入地点"
            android:inputType="text" /> />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/acc_note"
            android:layout_width="fill_parent"
            android:layout_height="103dp"
            android:height="100dp"
            android:gravity="left"
            android:hint="描述你的账务详细"
            android:inputType="text"
            android:singleLine="false" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_inqx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:text="取消"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/btn_inqx"
            android:background="@android:color/darker_gray"
            android:onClick="insertAccount"
            android:text="保存"
            android:textSize="20sp" />


    </RelativeLayout>

</LinearLayout>
